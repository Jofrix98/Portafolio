---
interface Props {
  className?: string;
}

const props = Astro.props as Props;
---

<section id="home" class={`min-h-screen ${props.className} relative overflow-hidden`}>
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-500/30 via-black/80 to-black/90 backdrop-blur-sm"></div>
  </div>

  <div class="relative z-20 text-center flex items-center justify-center min-h-screen">
    <div class="relative">
      <div class="flex justify-center items-center">
        <img src="/assets/jofre.JPG" alt="Jofre Coll Vila" class="rounded-full w-36 h-36" />
      </div>
      <h1 class="text-8xl md:text-9xl font-bold text-white tracking-tight mb-4">
        JOFRE COLL VILA
      </h1>
      <p class="text-xl md:text-2xl text-white/80 mt-4 mb-8">
        Portafolio
      </p>
      <div class="container-scroll-button flex items-center justify-center">
        <a href = '#experience' class="scroll-button direction-column gap-[10px] margin-[0px] cursor-pointer text-decoration-none">
          <svg class = "w-[20px] h-[20px] fill-[#255, 255, 255, 0.6] transition-fill-0.3s ease transform-rotate-180deg hover:fill-[#255, 255, 255, 0.8]"viewBox="0 0 24 24">
            <path d="M7 14l5-5 5 5H7z"/>
          </svg>
          <svg class = "w-[20px] h-[20px] fill-[#255, 255, 255, 0.6] transition-fill-0.3s ease transform-rotate-180deg hover:fill-[#255, 255, 255, 0.8]"viewBox="0 0 24 24">
            <path d="M7 14l5-5 5 5H7z"/>
          </svg>
          <svg class = "w-[20px] h-[20px] fill-[#255, 255, 255, 0.6] transition-fill-0.3s ease transform-rotate-180deg hover:fill-[#255, 255, 255, 0.8]"viewBox="0 0 24 24">
            <path d="M7 14l5-5 5 5H7z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <style>

.scroll-button svg {
      width: 20px;
      height: 20px;
      fill: rgba(255, 255, 255, 0.6);
      transition: fill 0.3s ease;
      transform: rotate(180deg);
    }

    .scroll-button:hover svg {
      fill: rgba(255, 255, 255, 0.8);
    }

    @keyframes bounce {
      0%, 100% { transform: translateY(0) rotate(180deg); }
      50% { transform: translateY(-5px) rotate(180deg); }
    }

    .scroll-button svg:nth-child(1) { animation: bounce 2s infinite; }
    .scroll-button svg:nth-child(2) { animation: bounce 2s infinite 0.2s; }
    .scroll-button svg:nth-child(3) { animation: bounce 2s infinite 0.4s; }

    /* Smooth scroll animation */
    html {
      scroll-behavior: smooth;
    }
  </style>
</section>