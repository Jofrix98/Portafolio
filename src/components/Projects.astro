---
import { z } from "astro:content";

interface Project {
  title: string;
  description: string;
  imageUrl: string;
  link: string;
  date: string;
}

const projects: Project[] = [
  {
    title: 'SmartCut Startup',
    description: 'He colaborado en la creación de SmartCut, una Startup que busca desarrollar un editor de video con inteligencia artificial. El proyecto cuenta con una página web, un estudio de mercado y un video promocional.',
    imageUrl: '/assets/SmartCut.JPG',
    link: 'https://vpei-smartcut.pages.dev/',
    date: 'Abril 2025'
  },
  {
    title: 'RAG Facultat Informàtica de Barcelona',
    description: 'He colaborado en la creación de un chatbot con inteligencia artificial, desarrollado en el marco de un proyecto de la Facultad de Informàtica de Barcelona (FIB) y entrenado para responder preguntas relacionadas con la propia facultad. Las tecnologías utilizadas incluyen ChromaDB, Tesseract, All-MiniLM-L6-v2, Flask, HTML y CSS.',
    imageUrl: '/assets/RAG_FIB.png',
    link: 'https://github.com/Jofrix98/Chatbot-RAG',
    date: 'Abril 2025'
  },
  {
    title: 'Página Web para Premium Delevent',
    description: 'He desarrollado y mejorado la Página Web de Premium Delevent con templates PHP de Wordpress. Algunos ejemplos de los proyectos que he realizado son: Popup\'s de los productos (imagenes en eventos, modelos 3D...), Canal de Denuncias, Trabaja con nosotros, entre otros',
    imageUrl: '/assets/WebPremium.JPG',
    link: 'https://www.premiumdelevent.com/',
    date: 'Abril 2024'
  },
  {
    title: 'App Pedidos para Premium Delevent',
    description: 'He colaborado en el desarrollo de la App de Pedidos de Premium Delevent, realizada con Symfony, que permite el seguimiento y la gestión de los pedidos de mobiliario, moqueta y stands para grandes eventos.',
    imageUrl: '/assets/App_pedidos_premium.JPG',
    link: 'https://pedidos.premiumdelevent.com/login',
    date: 'Abril 2024'
  },
  {
    title: 'App para el Control de Intercambios con Python para Premium Delevent',
    description: 'He desarrollado una App interna para el control del Stock entre las diferentes Sedes de Premium Delevent. Ha sido desarrollada con Pyhton utilizando Tkinter y OpenPyXl.',
    imageUrl: '/assets/Intercambios.png',
    link: '',
    date: 'Junio 2024'
  },
  {
    title: 'Projet Final - Site de visualisation des mouvements de population',
    description: 'Página Web realizada con Dash y Bases de datos del Gobierno Francés. Algunas de las funcionalidades són por ejemplo el estudio de la emigración de los la población de una ciudad o pueblo en concreto. Otra funcionalidad es la busqueda de tus origines familiares según tus apellidos.',
    imageUrl: '/assets/projet-final.jpg',
    link: 'https://github.com/emmanuelgkn/goco_project',
    date: 'Diciembre 2023'
  },
  {
    title: 'Projecte de Recerca - Automatització d\'un camp de conreu',
    description: 'Proyecto realizado con BASIC para automatización de un robot con detección de obstáculos con luz infrarroja. El objetivo consiste en automatizar un tractor o cualquier otra máquina agraria para que pueda realizar patrones de movimiento adaptables a los campos de conreo segun el tamaño y forma del mismo.',
    imageUrl: '/assets/boe-bot.png',
    link: '#',
    date: ' Mayo 2022'
  },
  {
    title: 'Darwin\'s Odyssey',
    description: 'Juego de cooperación local en C# utilizando. Este videojuego trata de representar la evolución de la raza humana al largo de la história resolviendo enigmas o superando misiones.',
    imageUrl: '/assets/Darwins-Odissey.JPG',
    link: 'https://github.com/cezou/DarwinsOdyssey',
    date: 'Abril 2023'
  },
  {
    title: 'Fresh Fish',
    description: 'Juego realizado de estrategia en C++. Fresh Fish es un juego de Friedemann Friese publicado por 2F-Spiele en 2014.',
    imageUrl: '/assets/fresh-fish.svg',
    link: 'https://github.com/Jofrix98/FreshFish',
    date: '2024'
  }
];
---

<style>
  a{
    color: white;
    text-decoration: none;
  }
</style>

<section id="projects" class="max-w-6xl mx-auto px-4 py-12 bg-black/80">
  
  <h2 class="text-4xl font-bold text-white mb-12 text-center">Proyectos</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {projects.map((project) => (
      <div class="bg-white/5 rounded-lg overflow-hidden hover:scale-[1.02] transition-transform duration-300">
        <a href={project.link} class="block">
          <img src={project.imageUrl} alt={project.title} class="w-full h-48 object-cover" />
            <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">{project.title}</h3>
            <p class="text-gray-300 mb-4">{project.description}</p>
            <div class="flex justify-between items-center">
                <span class="text-sm text-gray-400">{project.date}</span>
                {project.link !== '#' && (
                <a href={project.link} class="text-blue-400 hover:text-blue-300 text-sm">
                    View Project
                </a>
                )}
            </div>
            </div>
        </a>
    </div>
    ))}
  </div>
</section>